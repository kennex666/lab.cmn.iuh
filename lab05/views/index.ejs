<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>

<body class="d-flex flex-column">
    <div class="d-flex flex-column w-25">
        <form action="/add" method="post" enctype="multipart/form-data">
            <div class="mb-1">
                <label for="id" class="form-label">ID</label>
                <input type="number" class="form-control" id="id" name="id">
            </div>
            <div class="mb-1">
                <label for="name" class="form-label">Ten mon hoc</label>
                <input class="form-control" id="name" name="name">
            </div>
            <div class="mb-1">
                <label for="type" class="form-label">Loai mon hoc</label>
                <input class="form-control" id="type" name="type">
            </div>
            <div class="mb-1">
                <label for="semester" class="form-label">Hoc ky</label>
                <input class="form-control" id="semester" name="semester">
            </div>
            <div class="mb-1">
                <label for="department" class="form-label">Khoa</label>
                <input class="form-control" id="department" name="department">
            </div>
            <div class="mb-1">
                <label for="image" class="form-label">Image</label>
                <input class="form-control" id="image" name="image" type="file">
            </div>
            <div class="mb-1">
                <button class="btn btn-primary w-100">ThÃªm</button>
            </div>

        </form>
    </div>
    <div class="d-flex flex-column align-items-center">
        <caption>Danh sach cac mon hoc</caption>
        <table class="table">
            <thead class="">
                <tr>
                    <th>STT</th>
                    <th>Ten mon hoc</th>
                    <th>Loai mon hoc</th>
                    <th>Hoc ky</th>
                    <th>Khoa</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                <% courses.forEach( item => { %>

                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.course_type %>
                        </td>
                        <td>
                            <%= item.semester %>
                        </td>
                        <td>
                            <%= item.department %>
                        </td>
                        <td>
                            <img src="<%= item.image %>" class="h-25 w-25" alt="" srcset="">
                        </td>
                        <td>
                            <a href="delete/<%= item.id%>" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>